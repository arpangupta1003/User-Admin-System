    <center>
        <h2>Welcome to the User Registration Page</h2>
    </center>
    <center>
        <form action="/register" method="post">
            <input type="text" name="name" placeholder="Enter Your Name">
            <br>
            <br>
            <input type="email" name="email" placeholder="Enter YourEmail">
            <br>
            <br>
